
<div class="card col-md-7 mx-auto">
    <div class="card-header d-flex justify-content-between align-items-center bg-light text-black">
        <p class="fonttitle"> {{image.name}}, {{image.ciudad}} [{{image.tipo}}]</p>
                  
            {{#if usuario}}      
                <button class="btn btn-danger" name="eliminar" id="btn-delete" onclick="Fboton()" data-id="{{image.uniqueId}}">
                    <i class="fa fa-times"></i> <span>Borrar foto</span>
                </button>  
            {{/if}}
         
    </div>
    <div class="card-body">
        
        <div class="text-center">
            <img src="/public/upload/{{image.filename}}" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-primary" id="btn-like" data-id="{{image.filename}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            Numero de likes: <span class="likes-counts fontnav">{{image.likes}}</span>
            <i class="fa fa-heart"></i>
        </p>
        <p>
            Numero de vistas: <i class="fas fa-eye"></i><span class="fontnav"> {{image.vistas}}</span>
        </p>
        <p>
            Publicaci√≥n: <i class="far fa-clock"></i>
            <span class="fontnav">{{timeago image.timestamp}}</span>
        </p>


    </div>
    <div class="card-footer">
       
        <span class="fontnav">Subida por: <i class="fa-solid fa-user"></i> {{image.nameuser}}</span>
        <br><i class="fa-solid fa-location-dot"></i> {{image.ciudad}}
        <br><i class="fa-solid fa-paw"></i> {{image.name}}
        <br><i class="fa-solid fa-cat"></i> <i class="fa-solid fa-dog"></i> {{image.raza}}
        <br><i class="fa-sharp fa-solid fa-circle-info"></i> : {{image.descripcion}}
        <br><i class="fa-solid fa-phone"></i> : {{image.contacto}}            
    </div>
    

</div>

<div class="card mt-2 col-md-7 mx-auto">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comentarios</h3>
        <button class="btn btn-primary" id="btn-toggle-comment">
            <i class="fa fa-comment"></i> Publica un Comentario
        </button>
    </div>
    <div class="card-body">
       
        <blockquote id="post-comment">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="hidden" class="form-control" name="name" value={{#each usuario}}{{name}}{{/each}}>
                </div>  
                <div class="form-group">
                    <input type="hidden" class="form-control" name="email" value={{#each usuario}}{{email}}{{/each}}>
                </div> 

                <div class="form-group">
                    <textarea name="comment" class="form-control" placeholder="Tu comentario"></textarea>
                </div>   
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Enviar comentario
                    </button>
                    
                </div>   
            </form>
             
        </blockquote>
        <ul class="list-group p-4">
           

            {{#each comments}}
                  
                <li class="list-group-item">
                    <div class="row">
                        <blockquote>
                            <p class="lead fontnav">{{comment}}</p>
                            
                            <footer class="blockquote-footer fontcomment">
                               <i class="fa-solid fa-user"></i> {{name}} - {{timeago timestamp}}
                            </footer>
                        </blockquote>
                    </div>

                </li>
                
            {{/each}}
        </ul>
    </div>
    
</div>